# XpertSphere - Configuration Environment Variables Template
# Copiez ce fichier vers .env et remplissez les valeurs

# Base de données SQL Server
DB_SERVER=localhost,1433
DB_NAME=XpertSphereDb
DB_USER=sa
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Ports des services
SQLSERVER_PORT=1433
REDIS_PORT=6379
ADMINER_PORT=8080
API_PORT=5000

# Azure AD Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-256-bits-long
JWT_ISSUER=XpertSphere
JWT_AUDIENCE=XpertSphere-API

# Environnement
ASPNETCORE_ENVIRONMENT=Development

# Test Entra ID en développement (true pour tester Entra ID localement)
ENABLE_ENTRAID_IN_DEV=false
